@model EstoqueDeSemente.Models.Produto

<h2>@(Model.ProdutoId == 0 ? "Adicionar Produto" : "Editar Produto")</h2>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="@(Model.ProdutoId == 0 ? "Adicionar" : "Edit")" asp-controller="Home" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataDeVencimento" class="form-label">Data de Vencimento</label>
        <input asp-for="DataDeVencimento" class="form-control" type="date" />
        <span asp-validation-for="DataDeVencimento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fornecedor" class="form-label">Fornecedor</label>
        <input asp-for="Fornecedor" class="form-control" />
        <span asp-validation-for="Fornecedor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuantidadeDeProduto" class="form-label">Quantidade de Produto</label>
        <input asp-for="QuantidadeDeProduto" class="form-control" type="number" />
        <span asp-validation-for="QuantidadeDeProduto" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ProdutoId" />

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>