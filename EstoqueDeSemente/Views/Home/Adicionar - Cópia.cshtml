@model Produto

<h2>Nova Tarefa</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Adicionar" asp-controller="Home" method="post">

    <div class="mb-3>">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="mb-3>">
        <label asp-for="DataDeVencimento" class="form-label">Data De Vencimento</label>
        <input asp-for="DataDeVencimento" class="form-control" />
    </div>

    <div class="mb-3>">
        <label asp-for="Fornecedor" class="form-label">Fornecedor</label>
        <input asp-for="Fornecedor" class="form-control" />
    </div>

    <div class="mb-3>">
        <label asp-for="QuantidadeDeProduto" class="form-label">Quantidade De Produto</label>
        <input asp-for="QuantidadeDeProduto" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Adicionar </button>
    <a asp-action="Index" class="btn btn-primary">Cancelar</a>


</form>